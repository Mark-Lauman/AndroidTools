<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:minHeight="48dp"
    android:background="#E5535353"
    android:clickable="true"
    android:orientation="horizontal" >

    <TextView
        android:id="@android:id/message"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@android:color/white" />

    <View
        android:id="@android:id/cut"
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:background="#72FFFFFF" />

    <Button
        android:id="@android:id/button1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/popup_btn_back"
        android:drawableLeft="@drawable/ic_undo"
        android:drawableStart="@drawable/ic_undo"
        android:drawablePadding="12dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="@string/popup_undo_button"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="@android:color/white"
        android:textStyle="bold" />
</LinearLayout>