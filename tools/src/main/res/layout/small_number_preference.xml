<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical" >

    <ImageButton android:id="@+id/plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/small_num_pref_plus"
        android:src="@drawable/ic_add_black" />

    <TextView android:id="@+id/number"
        android:layout_width="40sp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/plus"
        android:layout_toStartOf="@id/plus"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center"
        android:paddingTop="10dp"
        android:text="@string/small_num_pref_def" />

    <ImageButton android:id="@+id/minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/number"
        android:layout_toStartOf="@id/number"
        android:contentDescription="@string/small_num_pref_minus"
        android:src="@drawable/ic_remove_black" />

    <TextView android:id="@android:id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_toLeftOf="@id/minus"
        android:layout_toStartOf="@id/minus"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:paddingTop="10dp"
        android:text="@string/small_num_pref_text" />

    <View android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@android:drawable/divider_horizontal_bright"
        android:layout_below="@id/plus"/>

</RelativeLayout>